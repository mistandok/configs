{
  // =============================================
  // EDITOR SETTINGS
  // =============================================
  "cursor.cpp.disabledLanguages": ["plaintext"],
  "cursor.cpp.enablePartialAccepts": true,
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "editor.folding": true,
  "editor.foldingStrategy": "auto",
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.lineNumbers": "relative",
  "editor.showFoldingControls": "always",

  // =============================================
  // VIM SETTINGS
  // =============================================
  "vim.easymotion": true,
  "vim.highlightedyank.color": "rgba(250, 240, 170, 0.5)",
  "vim.highlightedyank.duration": 300,
  "vim.highlightedyank.enable": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.leader": " ",
  "vim.normalModeKeyBindings": [
    {
      "before": ["<C-h>"],
      "after": ["<C-w>", "h"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<C-w>", "j"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
    },
    {
      "before": ["g", "h"],
      "commands": [
        {
          "command": "editor.action.showDefinitionPreviewHover"
        }
      ]
    },
    {
      "before": ["g", "i"],
      "commands": [
        {
          "command": "editor.action.goToImplementation"
        }
      ]
    },
    {
      "before": ["g", "s"],
      "commands": [
        {
          "command": "editor.action.goToSuperMethod"
        }
      ]
    },
    {
      "before": ["K"],
      "commands": [
        {
          "command": "editor.action.showHover"
        }
      ]
    },
    {
      "before": ["<leader>", "\\"],
      "commands": [
        {
          "command": "workbench.action.splitEditor"
        }
      ]
    },
    {
      "before": ["<leader>", "c", "x"],
      "commands": [
        {
          "command": "workbench.action.closeActiveEditor"
        }
      ]
    },
    {
      "before": ["<leader>", "e"],
      "commands": [
        {
          "command": "workbench.view.explorer"
        }
      ]
    },
    {
      "before": ["<leader>", "h"],
      "commands": [
        {
          "command": "workbench.action.previousEditor"
        }
      ]
    },
    {
      "before": ["<leader>", "j"],
      "commands": [
        {
          "command": "editor.action.moveLinesDownAction"
        }
      ]
    },
    {
      "before": ["<leader>", "k"],
      "commands": [
        {
          "command": "editor.action.moveLinesUpAction"
        }
      ]
    },
    {
      "before": ["<leader>", "l"],
      "commands": [
        {
          "command": "workbench.action.nextEditor"
        }
      ]
    },
    {
      "before": ["<leader>", "l", "r"],
      "commands": [
        {
          "command": "editor.action.rename"
        }
      ]
    },
    {
      "before": ["<leader>", "x"],
      "commands": [
        {
          "command": "workbench.action.closeOtherEditors"
        }
      ]
    }
  ],
  "vim.useSystemClipboard": true,

  // =============================================
  // WORKBENCH SETTINGS
  // =============================================
  "window.commandCenter": 1,
  "window.title": "${activeEditorLong}${separator}${rootName}${separator}${profileName}",
  "workbench.activityBar.orientation": "vertical",
  "workbench.colorCustomizations": {
    "[Night Owl]": {
      "sideBar.border": "#2c4f6e",
      "sideBar.borderWidth": "1px",
      "sideBar.dropBackground": "#00000020"
    }
  },
  "workbench.colorTheme": "Night Owl",
  "workbench.editor.enablePreview": false,
  "workbench.editor.revealIfOpen": false,
  "workbench.tree.indent": 15,

  // =============================================
  // TERMINAL SETTINGS
  // =============================================
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",

  // =============================================
  // PYTHON SETTINGS
  // =============================================
  "python.analysis.typeCheckingMode": "strict",

  // =============================================
  // AVITO SCHEMAS
  // =============================================
