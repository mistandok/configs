    "file:///Users/akartikov/.avito/json_schemas/schemas/alert.yaml.json": ["alert.yaml"],
    "file:///Users/akartikov/.avito/json_schemas/schemas/app.toml.json": ["app.toml"],
    "file:///Users/akartikov/.avito/json_schemas/schemas/auth.toml.json": ["auth.toml"],
    "file:///Users/akartikov/.avito/json_schemas/schemas/autocanary.yaml.json": ["autocanary.yaml"],
    "file:///Users/akartikov/.avito/json_schemas/schemas/backoffice.yaml.json": ["backoffice.yaml"],
    "file:///Users/akartikov/.avito/json_schemas/schemas/boilerplate.yaml.json": ["**/boilerplate.yaml", ".boilerplates/*.yaml"],
    "file:///Users/akartikov/.avito/json_schemas/schemas/codegen.toml.json": ["**/codegen.toml"],
    "file:///Users/akartikov/.avito/json_schemas/schemas/databases.toml.json": ["databases.toml"],
    "file:///Users/akartikov/.avito/json_schemas/schemas/libs.toml.json": ["libs.toml"],
    "file:///Users/akartikov/.avito/json_schemas/schemas/nfr.toml.json": ["nfr.toml"],
    "file:///Users/akartikov/.avito/json_schemas/schemas/updates.toml.json": ["updates.toml"]
  }
}